<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="com.example.sauceda.ideasapp.FormularioTareaActivity"
    >



    <EditText
        android:id="@+id/etxNombreTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Tarea"

        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etxDescripcionTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripcion de la Tarea"
        android:layout_below="@+id/etxNombreTarea"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btnAgregarTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:layout_below="@+id/etxDescripcionTarea"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>